<?xml version="1.0" encoding="utf-8"?>

<odoo>
<!-- crm model instruction tab -->
<record id="crm_lead_view_form_inherit" model="ir.ui.view">
    <field name="name">crm_lead_form</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_lead_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//page[@name='lead']" position="after">
          <page name="instruction" string="Instruction Tab">
            <group>
              <group>
                <field name="contact_person"/>
                <field name='material_ids' widget = "many2many_tags"/>
                <field name="consumable_ids" widget='many2many_tags' domain="[('detailed_type','=',
                'consu')]"/>
               </group>
               <group>
                <field name="todos"/>
               </group>
               <!-- <field name='material_ids' widget = "many2many_tags"> -->
                <!-- <tree editable='bottom'> -->
                  <!-- <field name="material_and_tools_ids"/> -->
                <!-- </tree> -->
               <!-- </field> -->
               <field name='resource_ids'>
              <tree editable='bottom'>
                <field name="user_id"/>
                <field name="hours" widget="float_time"/>
                <field name="information"/>
              </tree>
              </field>
              <field name='date_ids'>
              <tree editable='bottom'>
                 <field name="date"/>
                 <field name="from_time" widget="float_time"/>
                 <field name="to_time" widget="float_time"/>
              </tree>
              <form>
                <group>
                   <field name="date"/>
                 <field name="from_time" widget="float_time"/>
                 <field name="to_time" widget="float_time"/>
                </group>
              </form>
           </field>
                
            </group>
          </page>
          
        </xpath>
    </field>
</record>
<!-- crm model instruction tab ends here -->



