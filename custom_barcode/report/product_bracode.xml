    <template id="inherit_report_generic_barcode" inherit_id="stock.report_generic_barcode">
        <xpath expr="//t [@t-set='nRows']" position="replace">
                    <t t-set="nRows" t-value="1"/>
        </xpath>
        <xpath expr="//t [@t-set='nCols']" position="replace">
                  <t t-set="nCols" t-value="1"/>  
        </xpath>
        <xpath expr="//span [@t-esc='o.name']" position="replace">
                    
        </xpath>
        <xpath expr="//t [@t-if='title']" position="replace">
                    
        </xpath>
        <xpath expr="//div[@t-field='o.barcode']" position="replace">            
              
         
         <div style="text-align:center; justify-content:center; margin-top:10px; margin-left:30px;">    
         <div style= "width: 100%; height: 10px;"/>
         <div t-if="o.barcode" t-field="o.barcode" t-options="{'widget': 'barcode', 'humanreadable': 0, 'width': 300, 'height': 50}"/>
         <span  style="font-size:9px;" t-esc="o.complete_name"></span>
          
  </div> 
        </xpath>
        
    </template>

