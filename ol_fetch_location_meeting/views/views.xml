<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--crm view inherit-->
        <record id="crm_lead_location_inherit" model="ir.ui.view">
            <field name="name">crm.lead.location.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="before">
                    <field name="meeting_location"/>
                </xpath>
            </field>
        </record>

        <!--sale view inherit-->
        <record id="sale_order_off_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.off.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='preview_sale_order']" position="after">
                    <button name="action_schedule_meeting_so" type="object" class="oe_stat_button"
                            icon="fa-calendar">
                        <field name="sale_order_meeting_count" widget="statinfo" string="Meetings"/>
                    </button>
                </xpath>
                <field name="partner_id" position="after">
                    <field name="meeting_location"/>
                </field>
            </field>
        </record>
    </data>
</odoo>