<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="wix_integrate_view_kanban" model="ir.ui.view">
        <field name="name">wix.crm.view.kanban</field>
        <field name="model">wix.crm</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div>
                                <h3 style="text-align: center">WIX</h3>
                                
                            </div>
                            <div class="o_kanban_record_top mb16">
                                <strong class="o_kanban_record_title">
                                    <h5>Client ID</h5>
                                    <field name="cleint_id"></field>
                                    
                                </strong>
                            </div>
                            <div class="o_kanban_record_top mb16">
                                <strong class="o_kanban_record_title">
                                    <h5>Client Secret</h5>
                                    <field name="client_secret"></field>
                                    
                                </strong>
                            </div>
                            <!-- <div class="o_kanban_record_top mb16" style="text-align: right">
                                <button
                                class="oe_button btn-primary" name="refresh_token"
                                    type="object">Regenrate Token</button>

                            </div> -->
                            
                        </div>
                        
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    

    
   
    <record id="wix_integrate_view_form" model="ir.ui.view">
        <field name="name">wix.crm.view.form</field>
        <field name="model">wix.crm</field>
        <field name="arch" type="xml">
            <form string="Credentails">
                <sheet>
                    <group>
                    <group>
                    
                        <field name="cleint_id"/>
                        <field name="client_secret"/>
                        <field name="updated_date"/>
                </group>
                    <group>
                    <field name="refresh_token"  />
                    </group>
                    
                    <group>
                        <button string="Create Lead" name="cretae_Lead" class="btn-primary" type="object" />

                    </group>
                </group>
                    
                </sheet>
            </form>
        </field>
    </record>


    <record id="all_tasks_act" model="ir.actions.act_window">
        <field name="name">All Task</field>
        <field name="res_model">wix.crm</field>
        <field name="view_mode">kanban,form</field>
        <field name="context"></field>
        <field name="search_view_id" ref="wix_integrate_view_kanban"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tasks found. Let's create one!
            </p><p>
                 To get things done, use activities and status on tasks.<br/>
                Chat in real-time or by email to collaborate efficiently.
            </p>
        </field>
    </record>


    <menuitem id="all_task" name="WIX" 
    action="all_tasks_act" />
    <record id="wix_lead_create" model="ir.cron">
        <field name="name">wix Integrate</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="model_id" ref="model_wix_crm"></field>
        <field name="state">code</field>
        <field name="code">model.cretae_Lead()</field>
        <field name='interval_number'>1</field>
        <field name='interval_type'>hours</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
     </record>

    
</odoo>